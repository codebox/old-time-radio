<!doctype html>
<html>
    <head>
        <title>Old Time Radio - <%= episode.metadata.show %>: <%= episode.metadata.episode %></title>
        <meta name="viewport" content="initial-scale=1,maximum-scale=1,width=device-width" />
        <meta name="description" content="This station broadcasts Old Time Radio shows 24/7 for free. Listen to Superman, X-Minus One, Tarzan, Philip Marlowe, Gunsmoke, Jack Benny and many more" />
        <link rel="icon" type="image/png" href="/favicon.png"/>
        <meta property="og:title" content="Old Time Radio" />
        <meta property="og:url" content="https://oldtime.radio" />
        <meta property="og:type" content="website" />
        <meta property="og:description" content="Streaming shows from the Golden Age of Radio 24/7" />
        <meta property="og:image" content="https://oldtime.radio/otr.png" />
        <link rel="stylesheet" href="/css/common.css">
        <link rel="stylesheet" href="/css/search.css">
    </head>
    <body>
        <%- include('partials/header', { subTitle: `${episode.metadata.show}: ${episode.metadata.episode}`, cssClass: "episodeHeader" }) %>
        <main>
            <h2><%= episode.metadata.show %>: <%= episode.metadata.episode %></h2>

            <p class="compact"><em><%= episode.metadata.summary_small %></em></p>

            <p class="compact">
                <a href="/episodes/<%= episode.metadata.show %>">Other '<%= episode.metadata.show %>' episodes</a>
            </p>

            <h3>Plot Summary</h3>

            <%- include('partials/episode-details', {
                description: episode.text,
                audioUrl: episode.metadata.url,
                episodePageUrl: `/episode/${episode.id}`}) %>
        </main>
    </body>
</html>
